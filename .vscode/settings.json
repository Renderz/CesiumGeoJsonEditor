{
  // css
  "css.validate": false,

  // editor
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "editor.cursorBlinking": "expand",
  "editor.defaultFormatter": "biomejs.biome",
  // prettier
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": "active",
  "editor.tabSize": 2,

  // explorer
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    ".fatherrc.*": ".fatherrc.*,.dumirc.*",
    "*.env": "$(capture).env.*",
    "CHANGELOG.md": "CHANGELOG*",
    "package.json": "pnpm-lock.yaml,pnpm-workspace.yaml,Jenkinsfile*,LICENSE,.gitattributes,.gitignore,.gitpod.yml,CNAME,README*,.npmrc,.browserslistrc,.lintstagedrc,.node-version,tsconfig.json,biome.json"
  },

  // files
  "files.eol": "\n",
  "files.insertFinalNewline": true,

  "less.validate": false,
  "npm.packageManager": "pnpm",
  "scss.validate": false,

  // search
  // 在使用搜索功能时，将这些文件夹/文件排除在外
  "search.exclude": {
    "**/.umi*": true,
    "**/node_modules": true,
    "**/pnpm-lock.yaml": true,
    "ci": true,
    "dist": true,
    "node_modules": true
  }
}
