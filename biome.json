{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "useSortedKeys": {
          "level": "on",
          "options": {
            "sortOrder": "natural"
          }
        }
      }
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*",
      "!**/dist",
      "!**/node_modules",
      "!.dumi/**/*",
      "!biome.json",
      "!es/**/*",
      "!lib/**/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    },
    "jsxRuntime": "reactClassic"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
