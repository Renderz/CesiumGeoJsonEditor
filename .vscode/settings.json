{
  "npm.packageManager": "pnpm",

  // editor
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // prettier
  "editor.formatOnSave": true,
  "editor.cursorBlinking": "expand",
  "editor.guides.bracketPairs": "active",

  // files
  "files.eol": "\n",
  "files.insertFinalNewline": true,

  // search
  // 在使用搜索功能时，将这些文件夹/文件排除在外
  "search.exclude": {
    "**/node_modules": true,
    "ci": true,
    "dist": true,
    "node_modules": true,
    "**/pnpm-lock.yaml": true,
    "**/.umi*": true
  },

  // eslint
  "eslint.format.enable": true,
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],

  // stylelint
  "stylelint.enable": true,
  "stylelint.validate": ["css", "less", "postcss", "scss", "sass"],

  // css
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  // explorer
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.env": "$(capture).env.*",
    "CHANGELOG.md": "CHANGELOG*",
    "package.json": "pnpm-lock.yaml,pnpm-workspace.yaml,Jenkinsfile*,LICENSE,.gitattributes,.gitignore,.gitpod.yml,CNAME,README*,.npmrc,.browserslistrc,.lintstagedrc.*,.node-version",
    ".eslintrc.*": ".eslintignore,.prettierignore,.stylelintignore,.prettierrc.*,.stylelintrc.*,commitlint.config.*",
    ".fatherrc.*": ".fatherrc.*,.dumirc.*"
  }
}
